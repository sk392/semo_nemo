<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="-1dp"
    android:background="@color/colorPrimary"
    tools:context="com.semonemo.latte.toyouproject.view.HomeActivity">
    <com.semonemo.latte.toyouproject.view.layout.AppbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_home"/>
    <ImageView
        android:id="@+id/iv_home_background_man"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/man"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
    <com.rd.PageIndicatorView
        android:id="@+id/pi_home"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:piv_interactiveAnimation="true"
        app:piv_animationType="scale"
        app:piv_unselectedColor="@color/dark_gray"
        app:piv_radius="4dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
